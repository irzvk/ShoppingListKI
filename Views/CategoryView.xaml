<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ShoppingListKI.Views"
    x:Class="ShoppingListKI.Views.CategoryView">

	<VerticalStackLayout>
		<Label
            Text="{Binding Nazwa}"
            FontAttributes="Bold"
            FontSize="18"/>

		<CollectionView ItemsSource="{Binding Produkty}">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<views:ProductView />
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</VerticalStackLayout>
</ContentView>
